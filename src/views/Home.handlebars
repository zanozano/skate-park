<div class="container-table animate__animated animate__backInUp">
    <h2 class="container-table__title text-center mb-4">Participant List</h2>
    <table class="table container-table__table table-light">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col">Photo</th>
                <th scope="col">Name</th>
                <th scope="col">Experience</th>
                <th scope="col">Skill</th>
                <th scope="col">Status</th>
            </tr>
        </thead>
        <tbody id='cuerpo'>
            {{!--body --}}
        </tbody>
    </table>

</div>

<script>
    let url = 'http://localhost:3000/usuario';
    let tbody = document.getElementById('cuerpo');
    let usuarios = [];
    window.onload = getData();
    async function getData() {
        await axios.get(url + 's').then((data) => {
            usuarios = data.data;
            let estado;

            usuarios.forEach((c, i) => {
                if (c.estado == false) {
                    estado = '<td class="text-warning font-weight-bold">En revisi√≥n</td>';
                } else {
                    estado = '<td class="text-success font-weight-bold">Aprobado</td>'
                }
                // get photo
                const ruta_foto = `/uploads/${c.foto}`
                tbody.innerHTML += `
          <tr>
            <td>${i + 1}</td>
            <td><img src='${ruta_foto}' class="container-table__img"></td>
            <td>${c.nombre}</td>
            <td>${c.anos_experiencia}</td>
            <td>${c.especialidad}</td>
            ${estado}
          </tr>
        `
            });
        })
    }
</script>
